set scroll-step 100
set selection-notification false
set selection-clipboard clipboard
# normal mode
unmap normal j
unmap normal k
unmap normal u
unmap normal d
map u scroll half-up
map d scroll half-down
map k scroll up
map j scroll down

# fullscreen mode
unmap fullscreen j
unmap fullscreen k
unmap fullscreen u
unmap fullscreen d
map [fullscreen] u scroll half-up
map [fullscreen] d scroll half-down
map [fullscreen] k scroll up
map [fullscreen] j scroll down
