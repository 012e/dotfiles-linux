set scroll-step 100
set selection-notification false
set selection-clipboard clipboard

# normal mode
unmap normal j
unmap normal k
unmap normal u
unmap normal d
map u scroll half-up
map d scroll half-down
map k scroll up
map j scroll down

unmap normal w
map w scroll up

unmap normal s
map s scroll down 

unmap normal a
map a scroll half-up

map W scroll up
map S scroll down
map A scroll left
map D scroll right

# fullscreen mode
unmap fullscreen j
unmap fullscreen k
unmap fullscreen u
unmap fullscreen d
map [fullscreen] u scroll half-up
map [fullscreen] d scroll half-down
map [fullscreen] k scroll up
map [fullscreen] j scroll down

map <C-b> focus_inputbar ":blist "
map <C-m> focus_inputbar ":bmark "

unmap normal Left
unmap normal Right
map <Left> navigate previous
map <Right> navigate next
