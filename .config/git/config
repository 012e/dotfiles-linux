[alias]
	fixc = commit --ammend
	lastc = log -1 HEAD --stat
	searchc = !git rev-list --all | xargs git grep -F
	s = status --short
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	c = commit
	d = diff
