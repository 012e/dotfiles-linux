#!/bin/sh
set -e
file="/tmp/ocr.png"
# maim --select /tmp/ocr.png
rm -f $file
flameshot gui --path=$file
tesseract -l vie+eng /tmp/ocr.png stdout | xclip -selection clipboard
notify-send "OCR (tesseract)" "Copied text to clipboard"
# Dependencies (arch)
# flameshot
# tesseract
# tesseract-data-vie
# tesseract-data-eng
